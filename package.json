        "@babel/preset-typescript": "^7.10.4",
        "@types/react": "^16.9.46",
        "@types/react-dom": "^16.9.8",
        "@types/webpack-env": "^1.15.2",
        "babel-loader": "^8.1.0",
        "cross-env": "^7.0.2",
        "electron": "^9.2.1",
        "eslint": "^7.7.0",
        "eslint-config-goldenthumb": "^0.0.21",
        "html-webpack-plugin": "^4.3.0",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.0.2",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "^5.1.2"
