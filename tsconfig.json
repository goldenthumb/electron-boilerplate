{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "target": "ES6",
        "declaration": true,
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "baseUrl": ".",
        "paths": {
            "@main/": ["./src/main"],
            "@renderer/": ["./src/renderer"]
        },
        "allowJs": true,
        "jsx": "preserve",
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": ["./src"]
}
